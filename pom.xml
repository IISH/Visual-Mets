<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.iisg.visualmets</groupId>
    <artifactId>visualmets</artifactId>
    <version>1.0</version>
    <packaging>pom</packaging>
    <description>Visual METS</description>

    <build>
        <defaultGoal>install</defaultGoal>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>

        </plugins>
    </build>

    <repositories>
        <repository>
            <id>springsource maven repo</id>
            <url>http://maven.springframework.org/milestone</url>
        </repository>
        <repository>
            <id>m2</id>
            <url>http://download.java.net/maven/2/</url>
        </repository>
        <repository>
            <id>project-repro</id>
            <name>lib-maven-repository</name>
            <url>file://${basedir}/../repo</url>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
            <releases>
                <enabled>true</enabled>
                <checksumPolicy>ignore</checksumPolicy>
            </releases>
        </repository>
    </repositories>

    <modules>
        <module>spring-rest</module>
        <module>metsmaker</module>
    </modules>

    <organization>
        <name>IISH - International Institute for Social History. Social History Services</name>
        <url>www.socialhistory.org</url>
    </organization>

    <properties>
        <spring-version>3.1.0.RELEASE</spring-version>
    </properties>

</project>